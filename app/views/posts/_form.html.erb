<%= simple_form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.file_field :image %>
    <%= image_tag @post.image.url(:thumb) %>
    <br />
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
<% end %>
